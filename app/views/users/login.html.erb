<body class= "signup_page">
<h1>Login</h1>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with url: login_path, method: :post do |form| %>
  <div class="mb-3">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter your email address" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Log In", class: "btn btn-primary" %>
  </div>
<% end %>
</body>