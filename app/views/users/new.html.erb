<body class= "signup_page">
<h1>Sign Up</h1>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with model: @user, url: users_path do |form| %>

  <div class="mb-3">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter your email address" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="mb-3">
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, class: "form-control", placeholder: "Enter username" %>
  </div>

  <div class="mb-3">
    <%= form.label :account_type, "Account type" %>
    <%= form.radio_button :account_type, "current_account" %>
    <%= form.label :current_account, "Current Account" %>

    <%= form.radio_button :account_type, "saving_account" %>
    <%= form.label :saving_account, "Saving Account" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>

<% end %>
</body>
